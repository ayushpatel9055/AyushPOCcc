@if(Context.User.Identity.Name !=null)
{
	<form asp-controller="Account" asp-action="LogOut" method="post"id="LogoutForm" class="navbar-right">
	<ul class="nav navbar-nav navbar-right">
		<li>
			Hello @Context.User.Identity.Name!
		</li>
		<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link btn btn-light">LogOut</button>
		</li>
	</ul>	
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li>
			<a class="nav-link text-dark btn btn-primary" asp-controller="Account" asp-action="Registration">Registration</a>
		</li>
		<li>
			<a class="nav-link text-dark btn btn-warning ms-2" asp-controller="Account" asp-action="Login">Login</a>
		</li>
	</ul>


}